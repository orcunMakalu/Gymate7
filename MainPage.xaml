<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gymate7.MainPage">

    <StackLayout BackgroundColor="RoyalBlue">
        <StackLayout Padding="100" HorizontalOptions="Center">
            <Label Text="Welcome to" TextColor="White" />
            <Label Text="GYMATE" TextColor="White" FontSize="Large" FontAttributes="Italic" />
        </StackLayout>
        <ScrollView HorizontalOptions="Center">
            <StackLayout HorizontalOptions="Center">
                <Label Text="Enter your mobile number to get started!" TextColor="White" />
                <Frame BackgroundColor="White" BorderColor="DarkGray">
                    <Entry Placeholder="Mobile" HorizontalOptions="FillAndExpand" Keyboard="Numeric" FontSize="16" x:Name="EntryMobile"/>
                </Frame>
                <Button Text="NEXT" Clicked="Button_Clicked" TextColor="White" BackgroundColor="CornflowerBlue" />
            </StackLayout>
        </ScrollView>
        
    </StackLayout>

</ContentPage>
